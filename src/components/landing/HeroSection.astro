<script>
    import gsap from "gsap";
    import SplitText from "gsap/src/SplitText";

    const tl = gsap.timeline();
    const split = new SplitText("#fullName", {type:"words,chars"});
    console.log('split', split);
    
    const { words } = split;
    tl.to(words, {
        duration: 7,
        ease: "power3.out",
        color: "#ff0000",
        stagger: {
            each: 0.1,
        }
    })
</script>